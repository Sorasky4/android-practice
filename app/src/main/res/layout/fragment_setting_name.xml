<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setNameFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingNameFragment">

    <TextView
        android:id="@+id/tvNameLength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0/20"
        app:layout_constraintBottom_toTopOf="@id/etMyName"
        app:layout_constraintEnd_toEndOf="@id/etMyName" />

    <EditText
        android:id="@+id/etMyName"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="100dp"
        android:textSize="18sp"
        android:inputType="text"
        android:maxLength="20"
        android:hint="なまえを入力してください"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btSaveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/decision"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etMyName"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>